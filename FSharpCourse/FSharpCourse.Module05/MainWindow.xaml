<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Click on buttons"
    MinWidth="300"
    MinHeight="100"
    SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="button1"
            Content="Button 1" />
        <Button
            x:Name="button2"
            Grid.Row="1"
            Content="Button 2" />
    </Grid>
</Window>